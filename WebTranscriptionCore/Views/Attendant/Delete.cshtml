@model WebTranscriptionCore.AttendantViewModel



<div id="page-inner" class="border">

	<h3>Tem certeza que deseja excluir este orador?</h3>
	<div>
		<div class="row" style="margin-top:10px">
			<div class="col-md-12">
				<dl>
					<dt>
						Nome
					</dt>
					<dd>
						@Html.DisplayFor(model => model.Name)
					</dd>
					<dt>
						Papel do Orador
					</dt>
					<dd>
						@Html.DisplayFor(model => model.Role.Name)
					</dd>
					<dt>
						Partido
					</dt>
					<dd>
						@Html.DisplayFor(model => model.Party)
					</dd>
				</dl>
			</div>
		</div>

		@using (Html.BeginForm("Delete", "Attendant", FormMethod.Post, new { id = "submitForm" })) {

			@Html.AntiForgeryToken()

			<div class="row" style="margin-top:10px">
				<div class="col-md-6">
					<button type="submit" class="btn btn-primary">Excluir</button>
					<a href="javascript:history.back()" class="btn btn-primary">Cancelar</a>
				</div>
			</div>

			@Html.HiddenFor(model => model.Id, new { id = "attendantId" })

		}

	</div>
</div>

<script>
	$(document).ready(function () {

		$('#title').html('Excluir Orador');

	});
</script>
